.container
  .row
    ul.breadcrumb
      li
        a(href:"#/builders") Builders
  .row
    table.table.table-hover.table-striped.table-condensed
      tr
          td Builder Name
          td Slaves
          td Current Builds
          td Status
          td Category
        tr(ng-repeat='builder in builders')
          td
            a(href='#/builders/{{ builder.builderid }}')
              | {{ builder.name }}
          td
            ul.list-inline
              li(ng-repeat="slave in builder.slaves")
                a(href="#/buildslaves/{{slave}}")
                  {{ slave.name }}
          td
            ul.list-inline
              li(data-ng-repeat="build in builder.builds")
                a(data-ng-href="#/builders/{{ builder.id }}/build/{{build.buildid}}")
                  {{ build.id }}
          td
            | pending builds
          td
            | {{builder.category}}
