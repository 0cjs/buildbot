.container
  .row
    ul.breadcrumb
      li
        a(href="#/builders")
          | Builders
      li
        a(href="#/builders/{{builder.id}}")
          | {{builder.name}}
  .row
    table.table.table-hover.table-striped.table-condensed
      tr
        td id
        td Status
        td Started At
        td Duration
        td Owner
        td Results
      tr(ng-repeat='build in builds | orderBy:"-started_at"')
          td
            a(href='#/builders/{{ builder.id }}/build/{{build.buildid}}',title='{{build}}')
              | {{ build.buildid }}
          td
            span(ng-show="build.complete")
              | Done
            span(ng-hide="build.complete")
              i.icon-spinner.icon-spin.icon-large
          td
            | {{build.started_at | date}}({{build.started_at}})
          td
            span(ng-show="build.complete")
              | {{(build.complete_at - build.started_at)/60 |number:1}}mn
          td
          td
            ul.list-inline
              li(ng-repeat='st in build.state_strings')
                | {{st}}