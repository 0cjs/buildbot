extends layout
block content
  // navbar
  div.navbar.navbar-inverse
    div.navbar-inner
      div.container
        button.navbar-toggle(data-toggle="collapse", data-target=".navbar-responsive-collapse")
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="#/")
          img#logo(src="img/favicon.ico")
          | &nbsp;Buildbot
        div.nav-collapse.collapse
          topmenu
  // fluid container
  div(ng-controller="alertPanelController")
    alert(ng-repeat="alert in alerts",type="alert.type",close="closeAlert($index)", ng-animate="'repeat'")
      | {{alert.msg}}{{alert.occur_msg}}
  ng:view
