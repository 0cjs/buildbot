div.builder-meta(layout="row")
  div.status
    build-status(build="builder.lastBuild")
  h2.name(flex)
    | {{ builder.info.name }}
  md-menu.force-build(md-position-mode="target-right target")
    md-button.md-primary.md-raised(
      md-theme="default",
      ng-disabled="!builder.forceschedulers.length",
      ng-click="$mdOpenMenu()") Force Build
    md-menu-content(width="4")
      md-menu-item
        md-button(disabled) FORCE BUILD
      md-menu-divider
      md-menu-item(ng-repeat="scheduler in builder.forceschedulers")
        md-button(ng-click="builder.triggerSchedulerDialog(scheduler, $event)") {{ scheduler.name }}

md-tabs.builder-content(
  md-no-ink,
  md-border-bottom,
  md-center-tabs="false",
  md-autoselect,
  md-selected="builder.selectedTab",
)
  md-tab(label="builds")
    md-content.tab-content.builder-builds
      build-item(build="build", builder="builder", ng-repeat="build in builder.builds")
  md-tab(label="info")
    md-content.tab-content.builder-info
      div(layout-gt-md="row")
        div.label(flex="50") tags
        div.detail.tags
          span(ng-if="!builder.moreInfo.tags") No tag.
          span.tag(ng-repeat="tag in builder.moreInfo.tags") {{ tag }}
      div(layout-gt-md="row")
        div.label(flex="50") description
        div.detail {{ builder.moreInfo.description || "No description" }}
      div(layout-gt-md="row")
        div.label(flex="50") force schedulers
        div.detail
          span(ng-if="!builder.moreInfo.forceschedulers") No force scheduler.
          a(ng-repeat="scheduler in builder.moreInfo.forceschedulers", ui-sref="builds.schedulers") {{ scheduler.name }}
      div(layout-gt-md="row")
        div.label(flex="50") masters
        div.detail
          span(ng-if="!builder.moreInfo.masters") No master.
          a(ng-repeat="master in builder.moreInfo.masters", ui-sref="builds.masters") {{ master.name }}
      div(layout-gt-md="row")
        div.label(flex="50") build slaves
        div.detail
          span(ng-if="!builder.moreInfo.slaves") No slave.
          a(ng-repeat="slave in builder.moreInfo.slaves", ui-sref="builds.slaves") {{ slave.name }}
  md-tab(ng-disabled="!false", ng-if="builder.buildTabs.length > 0")
    md-tab-label
      md-icon.tab-divider(md-svg-icon="arrow-down")
  md-tab.build-tab(label="#build{{ tab.number }}", ng-repeat="tab in builder.buildTabs")
    md-content
      div.title-bar(layout="row")
        span(flex) #build{{ tab.number }}
        md-button(ng-click="builder.closeBuildTab(tab)")
          md-icon(md-svg-icon="close")
